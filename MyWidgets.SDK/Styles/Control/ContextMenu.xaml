<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
    xmlns:purs="clr-namespace:Panuon.WPF.UI.Resources;assembly=Panuon.WPF.UI">
    <Style BasedOn="{StaticResource {x:Static purs:StyleKeys.ContextMenuStyle}}" TargetType="ContextMenu">
        <Setter Property="pu:ContextMenuHelper.ItemsHoverBackground" Value="{DynamicResource Brush22}" />

        <Setter Property="BorderBrush" Value="{DynamicResource Brush44}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush84}" />
        <Setter Property="Background" Value="{DynamicResource Brush18}" />
    </Style>
</ResourceDictionary>