<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sdkc="clr-namespace:MyWidgets.SDK.Controls">
    <FontFamily x:Key="SegoeFluentIcons">Segoe Fluent Icons</FontFamily>
    <Style TargetType="sdkc:FontIcon">
        <Setter Property="FontFamily" Value="{StaticResource SegoeFluentIcons}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="4,0" />
    </Style>
</ResourceDictionary>